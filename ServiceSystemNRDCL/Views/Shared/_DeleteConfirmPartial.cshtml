@model ServiceSystemNRDCL.Models.ModelData;

<div class="modal fade" id="@Model.ModalIDName" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this @Model.Title?
            </div>
            <div class="modal-footer">
                <form asp-action="@Model.ActionName" asp-controller="@Model.ControllerName">
                    <input type="hidden" name="id" value="@Model.ID" id="id" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>