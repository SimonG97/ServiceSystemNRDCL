
@{
    ViewData["Title"] = "ForgotPassword";
}
@model ForgotPasswordModel
<div class="jumbotron text-center bg-white">
    <div class="container pt-5">
            <div class="row">
                <div class="col-md-5 mx-auto">
                    @if (Model?.EmailSent == true)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>We have sent an email on your registered email id. Please check your email!!!</strong><br />
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <div class="card shadow-lg ">
                        <div class="card-header">
                            <h4 class="text-center">Forgot Password</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="ForgotPassword" asp-controller="Home">
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-md-5 col-form-label form-control-label"></label>
                                    <div class="col-md-6">
                                        <input class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group justify-content-between align-content-center">
                                    <a asp-action="LogIn" class="btn btn-outline-secondary">Back</a>
                                    <input type="submit" value="Send" class="btn btn-primary" />
                                </div>

                            </form>

                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        

    </div>
</div>

