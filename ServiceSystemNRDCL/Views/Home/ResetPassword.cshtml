
@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordModel
<div class="jumbotron text-center bg-white">
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-5 mx-auto">
                @if (Model?.IsSuccess == true)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>You have successfully reset the password !!!</strong><br />
                        <a asp-action="LogIn" asp-controller="Home">Click here to log-In</a>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div class="card shadow-lg ">
                    <div class="card-header">
                        <h4 class="text-center">Reset Password</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="ResetPassword" asp-controller="Home">
                            <input type="hidden" asp-for="UserId" class="form-control" />
                            <input type="hidden" asp-for="Token" class="form-control" />
                            <div class="form-group row">
                                <label asp-for="NewPassword" class="col-md-5 col-form-label form-control-label"></label>
                                <div class="col-md-6">
                                    <input class="form-control" asp-for="NewPassword">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    <partial name="_PasswordError" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ConfirmNewPassword" class="col-md-5 col-form-label form-control-label"></label>
                                <div class="col-md-6">
                                    <input class="form-control" asp-for="ConfirmNewPassword">
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group justify-content-between align-content-center">
                                <input type="submit" value="Reset" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


