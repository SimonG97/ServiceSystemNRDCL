@model IEnumerable<ServiceSystemNRDCL.Models.Order>

@{
    ViewData["Title"] = "Index";
    IEnumerable<Product> ProductList = ViewData["ProductList"] as IEnumerable<Product>;
    int OrderSerialNo = 1;
    int ProductSerialNo = 1;
}

<div class="jumbotron text-center bg-white">
    <div class="container pt-4">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <div class="card-group">
                            <div class="col-md-6 text-left"><h4>Report by Customer</h4></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="Table" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Sl</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerCID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PriceAmount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TansportAmount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdvanceBalance)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@OrderSerialNo</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerCID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PriceAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TansportAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdvanceBalance)
                                        </td>
                                    </tr>
                                    OrderSerialNo++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-header">
                        <div class="card-group">
                            <div class="col-md-6 text-left"><h4>Report by Product</h4></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="customer" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Sl</th>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>
                                        Price Amount
                                    </th>
                                    <th>
                                        Transport Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @ProductList)
                                {
                                    <tr>
                                        <td>@ProductSerialNo</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PriceAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TransportAmount)
                                        </td>
                                    </tr>
                                    ProductSerialNo++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>